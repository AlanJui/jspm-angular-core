{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jasmine": true
    },

    "extends": "eslint:recommended",

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "plugins": [
        "jasmine"
    ],

    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": 0,
        "semi": [
            "error",
            "always"
        ],
        "jasmine/missing-expect": [
            "error",
            "expect()"
        ]
    }
}
